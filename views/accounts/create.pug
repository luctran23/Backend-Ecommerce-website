extends ../layouts/common
block content
    if errors
        each error in errors
            .alert.alert-danger= error
    .container
        .card.add-form
            .card-header Thêm tài khoản mới
            .card-body
                form(action="/accounts/create", method="POST")
                    div
                        label Tên tài khoản
                            input.form-control(type="text", name="name", value=values ? values.name : '')
                    div
                        label Mật khẩu
                            input.form-control(type="text", name="password" value=values ? values.status : '')
                    button.btn.btn-info Thêm
            .card-footer 
    