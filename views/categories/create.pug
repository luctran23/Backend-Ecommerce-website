extends ../layouts/common
block content
    if errors
        each error in errors
            .alert.alert-danger= error
    .container
        .card.add-form
            .card-header Thêm danh mục mới
            .card-body
                form(action="/categories/create", method="POST")
                    div
                        label Tên danh mục
                            input.form-control(type="text", name="name")
                    div
                        label Mã danh mục
                            input.form-control(type="text", name="cate_id")
                    button.btn.btn-info Thêm
            .card-footer 